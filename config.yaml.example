# Debate Agents Configuration

# 토론 설정
debate:
  duration_minutes: 10
  debate_rounds: 3  # static 모드: 고정 라운드 수, dynamic 모드: 최소 라운드 수
  panel_size: 4
  # 더 상세한 정보 출력
  show_debug_info: true
  # 토론 진행 방식 선택
  mode: "dynamic"  # "static" or "dynamic"
  # dynamic 모드 세부 설정
  dynamic_settings:
    max_rounds: 6  # 최대 라운드 수 (dynamic 모드에서만 사용)
    analysis_frequency: 2  # 몇 라운드마다 토론 상태 분석할지
    intervention_threshold: "cold"  # 개입 임계점 (heated/balanced/cold/stuck)
# AI 모델 설정
ai:
  model: "gpt-4.1"
  temperature: 0.7
  max_tokens: 700  # 기본 토큰 수
  # 특정 작업에 더 많은 토큰이 필요한 경우 배수 적용
  token_multipliers:
    persona_generation: 2.0    # 페르소나 생성 (4명의 상세 정보)
    conclusion: 6.0           # 최종 결론 (종합적 분석)
    # briefing, summary, panel_response 등은 기본값(1.0) 사용
  api_key: your_openai_api_key_here

# 로깅 설정
logging:
  level: "INFO"
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# 출력 설정
output:
  # 타이핑 속도 (초 단위, 0이면 최대속도, default 0.02)
  typing_speed: 0.02

# 에이전트 설정
agents:
  debate_manager:
    system_prompt: "당신은 전문적인 토론 진행자입니다. 균형잡힌 토론을 이끌어가세요."
    # 응답 제약 조건
    response_constraints:

      # 다른 제약 조건도 여기에 추가 가능
    # 추가 지시사항 (사용자 정의 가능)
    # 토론 진행자의 행동을 세부적으로 조정할 수 있습니다
    # 사용법: additional_instructions: ["지시1", "지시2", "지시3"]
    additional_instructions: [
      "더 적극적으로 패널 간 논쟁을 유도하세요",
      "각 발언 후 반드시 다른 패널에게 반박 기회를 주세요",
      "논리적 허점을 지적하는 질문을 자주 사용하세요",
      "토론이 지루해지면 논란이 될 만한 질문을 던지세요"
    ]
  
  panel_agent:
    base_prompt: "당신은 해당 분야의 전문가입니다. 자신의 전문성을 바탕으로 논리적이고 설득력 있는 의견을 제시하세요."
    # 응답 제약 조건
    response_constraints:

      # 다른 제약 조건도 여기에 추가 가능
    # 추가 지시사항 (사용자 정의 가능)
    # 패널 에이전트의 토론 스타일과 행동을 세부적으로 조정할 수 있습니다
    # 사용법: additional_instructions: ["지시1", "지시2", "지시3"]
    additional_instructions: [
      "발언 시 반드시 구체적인 데이터나 통계를 포함하세요",
      "상대방 의견에 대해 더 강하게 반박하세요",
      "자신의 경험담을 활용해 설득력을 높이세요",
      "감정적 어조보다는 논리적 근거를 중시하세요"
    ]

